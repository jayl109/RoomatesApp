


<div class="container-fluid text-center">
  <div class="row content">

    <div class="col-sm-8 text-left">
      <h1>Welcome</h1>
      <p>Hey, please Login <hr>


      <div class="well">



  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <input type="text" <%= f.email_field :email, autofocus: true, :placeholder=>"Your Email..."  %>


      </div>

      <div class="field">
        <%= f.label :password %><br />
        <input type="text" <%= f.password_field :password, autocomplete: "off", :placeholder=>"Your Password..." %>


      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

        <%= f.submit "Log in", :class=>"button2" %>

        <br>
        <br>

        <%= render "users/shared/links" %>

    <% end %>



  </form>



  </div>
</div>


</body>
</html>
